<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/white">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/nanumsquare_aceb"
        android:text="사용자 정보 입력"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_tv_email"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginTop="55dp"
        android:background="@drawable/input_border_round_radius7"
        android:ems="10"
        android:fontFamily="@font/nanumsquare_acr"
        android:hint="이메일"
        android:inputType="textEmailAddress"
        android:paddingLeft="15dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/edit_tv_name"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/input_border_round_radius7"
        android:ems="10"
        android:fontFamily="@font/nanumsquare_acr"
        android:hint="이름"
        android:inputType="textPersonName"
        android:paddingLeft="15dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/edit_tv_email"
        app:layout_constraintStart_toStartOf="@+id/edit_tv_email"
        app:layout_constraintTop_toBottomOf="@+id/edit_tv_email" />

    <EditText
        android:id="@+id/edit_tv_id"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/input_border_round_radius7"
        android:ems="10"
        android:fontFamily="@font/nanumsquare_acr"
        android:hint="아이디"
        android:inputType="textPersonName"
        android:paddingLeft="15dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/edit_tv_name"
        app:layout_constraintStart_toStartOf="@+id/edit_tv_name"
        app:layout_constraintTop_toBottomOf="@+id/edit_tv_name" />

    <EditText
        android:id="@+id/edit_tv_password"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/input_border_round_radius7"
        android:ems="10"
        android:fontFamily="@font/nanumsquare_acr"
        android:hint="비밀번호"
        android:inputType="textPassword"
        android:paddingLeft="15dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/edit_tv_id"
        app:layout_constraintStart_toStartOf="@+id/edit_tv_id"
        app:layout_constraintTop_toBottomOf="@+id/edit_tv_id" />

    <EditText
        android:id="@+id/edit_tv_password_check"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/input_border_round_radius7"
        android:ems="10"
        android:fontFamily="@font/nanumsquare_acr"
        android:hint="비밀번호 확인"
        android:inputType="textPassword"
        android:paddingLeft="15dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/edit_tv_password"
        app:layout_constraintStart_toStartOf="@+id/edit_tv_password"
        app:layout_constraintTop_toBottomOf="@+id/edit_tv_password" />

    <Button
        android:id="@+id/btn_signup"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_border_round"
        android:backgroundTint="@color/snsBlue"
        android:fontFamily="@font/nanumsquare_acr"
        android:text="회원가입"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/edit_tv_password_check"
        app:layout_constraintStart_toStartOf="@+id/edit_tv_password_check"
        app:layout_constraintTop_toBottomOf="@+id/edit_tv_password_check" />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/button_border_round"
        android:backgroundTint="@color/mainGray"
        android:fontFamily="@font/nanumsquare_acr"
        android:text="취소"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/btn_signup"
        app:layout_constraintStart_toStartOf="@+id/btn_signup"
        app:layout_constraintTop_toBottomOf="@+id/btn_signup" />

  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
